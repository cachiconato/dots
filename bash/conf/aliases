# make ls colorful
alias ls='ls --color=auto'
alias ll='ls -alF'
alias l='ls -CF'
# make grep colorful
alias grep='grep --color=auto -i'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
# set move and copy to be verbose
alias mv="mv -v"
alias cp="cp -v"
alias vi="vim"
case `uname -s` in
 'Linux') if type -p gvim &>/dev/null; then alias vim="gvim"; fi ;;
 'Darwin') if type -p mvim &>/dev/null; then alias vim="mvim"; fi ;;
esac
alias g="git"

alias gr="cd $HOME/workspaces/ruby/rails"
alias gg="cd $HOME/workspaces/gap/gid"
alias gs="cd $HOME/workspaces/ruby/sinatra"
