# make it colorful
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# set move and copy to be verbose
alias mv="mv -v"
alias cp="cp -v"

# Aliases the binaries to shorter names
alias vi="vim"
alias g="git"
alias r="rails"
alias b="bundle"

# Quickly go into the directories
WORKSPACE="$HOME/workspaces"
alias gw="cd $WORKSPACE"
alias gr="cd $WORKSPACE/ruby/rails"
alias gs="cd $WORKSPACE/ruby/sinatra"
alias gj="cd $WORKSPACE/javascript"
alias gci="cd $WORKSPACE/ruby/ci"

alias gg="cd $WORKSPACE/gap/gid"
alias gb="cd $WORKSPACE/gap/brazil-build"
