# make ls colorful
alias ls='ls --color=auto'
alias ll='ls -alF'
alias l='ls -CF'
# make grep colorful
alias grep='grep --color=auto -i'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
# set move and copy to be verbose
alias mv="mv -v"
alias cp="cp -v"
alias vi="vim"
case `uname -s` in
 'Linux') if type -p gvim &>/dev/null; then alias vim="gvim"; fi ;;
 'Darwin') if type -p mvim &>/dev/null; then alias vim="mvim"; fi ;;
esac
alias g="git"

WORKSPACE="$HOME/workspaces"
alias ww="cd $WORKSPACE"
alias gr="cd $WORKSPACE/ruby/rails"
alias gg="cd $WORKSPACE/gap/gid"
alias br="cd $WORKSPACE/gap/brazil-build"
alias gs="cd $WORKSPACE/ruby/sinatra"
alias gj="cd $WORKSPACE/javascript"
alias gci="cd $WORKSPACE/ruby/ci"
